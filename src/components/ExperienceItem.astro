---
const {date, title, description, technologies ,freelance} = Astro.props;
import TechlonolyCard from "./cards/TechlonolyCard.astro";
---
<div class="absolute w-3 h-3 bg-sky-600 rounded-full mt-1.5 -start-1.5 border border-white"></div>
<div class="md:flex md:flex-row">
    <div class="md:flex md:flex-col min-w-[300px] mb-5 ps-2">
        <h3 class="text-5xl md:text-xl mt-10 mb-5 md:m-0 font-semibold text-sky-600">{title}</h3>
        <time class="text-3xl md:text-sm mb-5 md:mb-0 md:m-0 font-normal leading-none">{date}</time>
        <p class="text-4xl md:text-base mb-5 md:m-0 font-normal">{freelance}</p>
        <div class="flex flex-wrap gap-5 md:gap-1 mt-1">
            {
                technologies.map((technology:string) => (
                    <TechlonolyCard title={technology} /> 
                ))
            }
        </div>
    </div>
    <div class="ps-5">
        <span class="text-4xl md:text-base mb-5 font-normal" set:html={description}></span>
    </div>
</div>