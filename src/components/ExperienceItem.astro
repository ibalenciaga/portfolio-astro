---
const {date, title, description, freelance} = Astro.props;
---
<div class="absolute w-3 h-3 bg-sky-600 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
<div class="md:flex md:flex-row ps-5">
    <div class="md:flex md:flex-col min-w-[300px] mb-5 ps-2">
        <time class="text-3xl md:text-sm mb-10 md:mb-0 md:m-2 font-normal leading-none">{date}</time>
        <h3 class="text-5xl md:text-xl mt-10 mb-10 md:m-2 font-semibold text-sky-600">{title}</h3>
        { freelance ?? <p class="text-4xl md:text-base mb-5 md:m-2 font-normal">{freelance}</p> }
    </div>
    <div class="ps-5">
        <h4 class="text-4xl md:text-base mb-5 md:m-2 font-normal">{description}</h4>
    </div>
</div>
